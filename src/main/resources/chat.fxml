<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="by.vdavdov.akka.room.ChatController" spacing="10" alignment="CENTER">
    <TextArea fx:id="chatArea" editable="false"/>

    <TextField fx:id="messageField" />
    <Button text="Send" onAction="#sendMessage"/>
    <ListView fx:id="userList"/>
</VBox>